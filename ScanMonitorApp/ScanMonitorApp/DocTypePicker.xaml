<Window x:Class="ScanMonitorApp.DocTypePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DocTypePicker" Height="638" Width="962" Closing="Window_Closing" SizeChanged="Window_SizeChanged">
    <Grid>
        <ScrollViewer Background="AliceBlue">
            <UniformGrid x:Name="gridOfImages">
                <UniformGrid.Resources>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Margin" Value="4"/>
                    </Style>
                </UniformGrid.Resources>
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Window>
