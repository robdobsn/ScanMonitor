<Controls:MetroWindow x:Class="ScanMonitorApp.MainWindow"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scan Monitor" Height="244" Width="540" Closed="Window_Closed"  Icon="res/simley64.ico">
    <Grid>
        <Label x:Name="statusText" Content="" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="501" Margin="10,10,0,0"/>
        <Button x:Name="butAddOldDocTypes" Content="Add Old Doc Types" HorizontalAlignment="Left" Margin="21,244,0,0" VerticalAlignment="Top" Width="160" Click="butAddOldDocTypes_Click"/>
        <Button x:Name="butViewAuditData" Content="View Audit Data" HorizontalAlignment="Left" Margin="21,274,0,0" VerticalAlignment="Top" Width="160" Click="butViewAuditData_Click"/>
        <Button x:Name="butViewDocTypes" Content="View Doc Types" HorizontalAlignment="Left" Margin="186,274,0,0" VerticalAlignment="Top" Width="160" Click="butViewDocTypes_Click"/>
        <Button x:Name="butAddOldLogRecs" Content="Add Recs from Old Log" HorizontalAlignment="Left" Margin="186,244,0,0" VerticalAlignment="Top" Width="160" Click="butAddOldLogRecs_Click"/>
        <Button x:Name="butViewScanFiling" Content="Scan Filing" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="512" Click="butViewScanFiling_Click" Height="120" FontSize="24"/>
        <Button x:Name="btnMigrate1" Content="Migrate DocType Thumbnail Strings" HorizontalAlignment="Left" Height="24" Margin="21,334,0,0" VerticalAlignment="Top" Width="291" Click="btnMigrate1_Click"/>
        <Label x:Name="statusRunningMonitor" Content="Label" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="511" Margin="0,38,0,0"/>
        <Button x:Name="butViewSubstMacros" Content="View Subst Macros" HorizontalAlignment="Left" Margin="21,304,0,0" VerticalAlignment="Top" Width="160" Click="butViewSubstMacros_Click"/>

    </Grid>
</Controls:MetroWindow>
