<Controls:MetroWindow x:Class="ScanMonitorApp.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Information" Height="255" Width="583" Loaded="MetroWindow_Loaded">
    <Grid>
        <Button x:Name="btnYes" Content="Yes" HorizontalAlignment="Left" Margin="75,0,0,27" Width="106" Click="btnYes_Click" FontSize="24"  Style="{DynamicResource SquareButtonStyle}" Height="60" VerticalAlignment="Bottom"/>
        <Button x:Name="btnNo" Content="No" HorizontalAlignment="Left" Margin="224,0,0,27" Width="106" Click="btnNo_Click" FontSize="24" Style="{DynamicResource SquareButtonStyle}" Height="60" VerticalAlignment="Bottom"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="374,0,0,27" Width="106" Click="btnCancel_Click" FontSize="24" Style="{DynamicResource SquareButtonStyle}" IsCancel="True" Height="60" VerticalAlignment="Bottom"/>
        <Border BorderBrush="{x:Null}" Margin="0,10,0,92">
            <TextBlock x:Name="txtMessage" TextWrapping="Wrap" Text="Message" TextAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
        </Border>
    </Grid>
</Controls:MetroWindow>
